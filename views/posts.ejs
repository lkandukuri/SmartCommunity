    <span class="CommTitle">Community Posts</span>
    <% for(let i = 0; i < posts.length; i++) { %>
    
    <div class="allpostcontainer">
        <div class="allpostImage">
			<img style="" src='<%= posts[i].path %>'/>
        </div>
        <div class="allpostDescription">
            <div class="col-sm-6">
    	    	<div class="productTitle"><%= posts[i].title %></div>
    	    	<div class="productDescription"><%= posts[i].description %></div>
    	    	<div class="productCommunity">Community: <%= posts[i].community %></div>
    	    	<div class="productPrice">$ <%= posts[i].price %></div>
            </div>

            <div class="col-sm-6 contact-options">
                <div class="productOwner col-sm-12 row">Owner: <%= posts[i].username %></div>
                <div class="col-sm-12 row">
                    <form action="/userchat:<%= i%>" method="post">
                        <button id="startChat" 
                            type="submit" 
                            class="btn btn-warning btn-lg">Start Chat</button>
                    </form>
                </div>
                <div class="col-sm-12 row">
                    <form action="/initiateemail:<%= posts[i].username %>" method="post">
                        <button id="contactOwner"  
                            type="submit" 
                            class="btn btn-warning btn-lg">Contact Owner</button>
                    </form>
                </div>
            </div>
	    	
        </div>
    </div>
    
    <% } %>

</div>


<div>
    <nav class="navbar navbar-inverse" role="navigation" style="">
        Footer
    </nav>
</div>

</body>
</html>
