<!doctype html>
<html>
<head>
	<title>SC</title>
	<link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
	<link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
	<link rel="stylesheet" href="/stylesheets/admin.css">
	<link rel="stylesheet" href="/stylesheets/profile.css">

</head>
<body>
<div class="container">

	<div>
		<nav class="navbar navbar-inverse" role="navigation" style="">
			<div class="HomepageTitle">Welcome, Admin</div>
			<ul class="nav navbar-nav">
				<li><a href="/adminhome" class="HomepageHome">Home</a></li>
				<li>
					<form action="/viewusers" method="post">
						<a href="javascript:;" class="HomepageMypost" onclick="parentNode.submit();">Users</a>
						<input type="hidden" name="mess" value="My Post"/>
					</form>
				</li>
				<li><a href="/logout" class="HomepageLogout">Logout</a></li>
			</ul>
		</nav>
	</div>

	<div class="page-header row">
		<div class="row col-sm-6 Community">
				<span class="AdminCommTitle">Community Management</span>
		</div>
	</div>



	<!--div class="row"><%= errorMessage%></div-->

	<div class="row">
		<div class="col-sm-6 adminLeftSection">
			<div class="adminCreateCommunity">
				<form action="/createCommunity" method="post"
					  class="col-sm-12 add-form">
					<h4>Create Community:</h4>
					<div class="form-group row">
						<label class="col-sm-3">Community name</label>
						<input type="text" name="newCommunity" class="col-sm-8"
							   required placeholder="Enter community name"></input>
					</div>
					<div class="form-group row">
						<div class="col-sm-3 col-sm-offset-3 padding-sm-0">
							<button type="submit" class="btn btn-warning btn-lg">Create</button>
						</div>
					</div>
				</form>
			</div>

			<div class="adminUpdateCommunity">
				<form action="/updateCommunity" method="post"
					  class="col-sm-12 add-form">
					<h4>Update Community:</h4>

					<div class="form-group row">
						<label class="col-sm-3">Select community to update</label>
						<select name="oldCommunity" class="col-sm-8" required>
							<!-- <option value="">Please select a community</option>	 -->
                            <% for(let i = 0; i < communities.length; i++) { %>
							<option value="<%= communities[i]%>"><%= communities[i]%></option>
                            <% } %>
						</select>
					</div>

					<div class="form-group row">
						<input type="text" name="newCommunity" class="col-sm-8 col-sm-offset-3"
							   required placeholder="Enter community name to be updated"></input>
					</div>
					<div class="form-group row">
						<div class="col-sm-3 col-sm-offset-3 padding-sm-0">
							<button type="submit" class="btn btn-warning btn-lg">Update</button>
						</div>
					</div>
				</form>

			</div>

			<div class="adminDeleteCommunity">
				<form action="/deleteCommunity" method="post"
					  class="col-sm-12 add-form">
					<h4>Delete Community:</h4>

					<div class="form-group row">
						<label class="col-sm-3">Select community</label>
						<select name="community" class="col-sm-8" required>
							<!-- <option value="">Please select a community</option>	 -->
                            <% for(let i = 0; i < communities.length; i++) { %>
							<option><%= communities[i]%></option>
                            <% } %>
						</select>
					</div>
					<div class="form-group row">
						<div class="col-sm-3 col-sm-offset-3 padding-sm-0">
							<button type="submit" class="btn btn-warning btn-lg">Delete</button>
						</div>
					</div>
				</form>
			</div>
		</div>

		<!-- <hr> -->

		<div class="col-sm-6 adminRightSection">
			<div class="row">
				<div class="col-sm-10">
					<h2>Community Information</h2>
				</div>
			</div>

			<table>
				<tr>
					<th>S.No</th>
					<th>Community</th>
				</tr>
                <% for(let i = 0; i < communities.length; i++) { %>
				<tr>
					<td><%= i+1 %></td>
					<td><input type="text" name="Community" class="no-style" value="<%= communities[i] %>" readonly/></td>


				</tr>
                <% } %>
			</table>
		</div>


	</div>
</div>
</body>
</html>
